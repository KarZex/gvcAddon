{
  "format_version": "1.10.0",
  "animation_controllers": {
    "controller.animation.hold": {
      "states": {
        "default": {
          "transitions": [
            {
              "fire": "query.get_equipped_item_name == 'fire'"
            }
          ]
        },
        "fire": {
          "on_entry": [
            "/function hold/fireh"
          ],
          "transitions": [
            {
              "default": "(1.0)"
            }
          ]
        }
      }
    }
  }
}