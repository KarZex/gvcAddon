        "sequence": [
          {
          "add": {
            "component_groups": [
              "can_despawn"
            ]
          }
        },
        {
            "filters": {
              "any_of": [
                {
                  "test": "has_biome_tag",
                  "value": "ocean"
                }
              ]
            },
            "add": { "component_groups": [ "navy" ] }
         },
          {
              "randomize": [
                {
                  "weight": 20,
