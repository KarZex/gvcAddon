              "filters": {
                "all_of": [
                { "test": "is_family","subject": "other","value": "player"},
                { "test": "has_equipment", "subject": "other", "domain": "hand", "value": "zex:rep"},
                { "test": "is_missing_health","operator": "not" }
                ]
              },
              "event": "despawning",
              "target": "self"
            }
          },
          {
            "use_item": true,
            "play_sounds": "irongolem.repair",
            "interact_text": "Start Invasion Mode",
            "on_interact": {
              "filters": {
                "all_of": [
                  { "test": "is_family","subject": "other","value": "player"},
                  { "test": "has_equipment", "subject": "other", "domain": "hand", "value": "gvcv5:infantry_i"}
                ]
              },
              "event": "gvcv5:raid_mode_infantry_i",
              "target": "self"
            }
          },
          {
            "use_item": true,
            "play_sounds": "irongolem.repair",
            "interact_text": "Start Invasion Mode",
