      "is_summonable": true
    },

	"component_groups": {
      "despawning": {
        "minecraft:instant_despawn": {}
      }
    },

    "components": {
      "minecraft:experience_reward": {
        "on_death": "0"
      },
     "minecraft:boss": {
        "name": "action.gvc.af",
        "should_darken_sky": false,
        "hud_range": 30
      },
      "minecraft:damage_sensor": {
        "triggers": [
        {
          "cause": "all",
          "deals_damage": true,
          "on_damage": {
            "filters": {
            "all_of": [
              {"test": "has_damage", "value": "fatal"},
              {"test": "is_family", "subject": "other", "value": "monster"}
            ]
                },
                "event": "become_GA"
              }
        },
        {
          "cause": "all",
          "deals_damage": false,
          "on_damage": {
                "filters": {
                    "all_of": [
                      {
                        "test": "is_family",
                        "subject": "other",
                        "value": "allied_soldier"
                      }
                    ]
                }
              }
        }
      ]
	  },
	  
      "minecraft:loot": {
        "table": "loot_tables/entities/a1.json"
      },
      "minecraft:type_family": {
        "family": [ "allied_soldier_flag","allied_soldier","playerp","mob" ]
      },
      "minecraft:breathable": {
        "total_supply": 15,
        "suffocate_time": 0
      },
      "minecraft:nameable": {
      },
      "minecraft:health": {
        "value": 200,
        "max": 200
      },
      "minecraft:hurt_on_condition": {
        "damage_conditions": [
          {
            "filters": { "test": "in_lava", "subject": "self", "operator": "==", "value": true },
            "cause": "lava",
            "damage_per_tick": 4
          }
        ]
      },
      "minecraft:collision_box": {
        "width": 1,
        "height": 1
      },
      "minecraft:knockback_resistance": {
        "value": 1.0
      },
