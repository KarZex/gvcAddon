              "filters": {
                "all_of": [
                  { "test": "is_family","subject": "other","value": "player"},
                  { "test": "has_equipment", "subject": "other", "domain": "hand", "value": "gvcv5:infantry_ii"}
                ]
              },
              "event": "gvcv5:raid_mode_infantry_ii",
              "target": "self"
            }
          },
          {
            "use_item": true,
            "play_sounds": "irongolem.repair",
            "interact_text": "Start Invasion Mode",
            "on_interact": {
              "filters": {
                "all_of": [
                  { "test": "is_family","subject": "other","value": "player"},
                  { "test": "has_equipment", "subject": "other", "domain": "hand", "value": "gvcv5:infantry_iii"}
                ]
              },
              "event": "gvcv5:raid_mode_infantry_iii",
              "target": "self"
            }
          }
        ]
      },
      "minecraft:behavior.summon_entity": {
        "priority": 2,

        "summon_choices": [
          {
            "weight": 1,
            "cooldown_time": 1.0,
            "cast_duration": 0,
            "particle_color": "#FFB3B3CC",
            "sequence": [
              {
                "shape": "circle",
                "target": "self",
                "base_delay": 5.0,
                "num_entities_spawned": 5,
                "entity_type": "gvcv5:ca",
                "summon_cap": 8,
                "summon_cap_radius": 32.0,
                "size": 1.0,
                "sound_event": "prepare.summon"
              }
            ]
          }
        ]
      },
      "minecraft:behavior.send_event": {
        "priority": 3,
        "event_choices": [
          {
            "min_activation_range": 0.0,
            "max_activation_range": 16.0,
            "cooldown_time": 5.0,
            "cast_duration": 3.0,
            "particle_color": "#FFB38033",
            "weight": 3,
            "filters": { 
                "all_of": [
                  { "test" :  "is_family", "subject" : "other", "value" :  "sheep"},
                  { "test" :  "is_color", "subject" : "other", "value" :  "blue"}
                ] 
            },
            "start_sound_event": "cast.spell",
            "sequence": [
              {
                "base_delay": 12.0,
                "event": "wololo",
                "sound_event": "prepare.wololo"
              }
            ]
          }
        ]
      },
      "minecraft:behavior.random_stroll": {
        "priority": 8,
        "speed_multiplier": 0.6
      },
      "minecraft:behavior.nearest_attackable_target": {
        "priority": 2,
        "entity_types": [
          {
            "filters": {  
                "any_of": [
                  { "test" :  "is_family", "subject" : "other", "value" :  "monster"}
                ] 
            },
            "max_dist": 10
          }
        ],
        "must_see": true
      },
      "minecraft:persistent": {
      },
      "minecraft:physics":{},
      "minecraft:pushable": {
