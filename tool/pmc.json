{
  "format_version": "1.21.0",
  "minecraft:entity": {
    "description": {
      "identifier": "gvcv5:pmc",
      "spawn_category": "creature",
      "is_spawnable": true,
      "is_summonable": true,
      "scripts": {
        "animate": [
          "walk"
        ]
      },
      "animations": {
        "walk": "controller.animation.riderb1"
      }
    },
    "component_groups": {
      "attack": {
          "minecraft:movement": {
            "value": 0.25
          },
          "minecraft:variant": {
            "value": 1
          }
       },
      "wait": {
          "minecraft:movement": {
            "value": 0
          },
            "minecraft:variant": {
              "value": 2
            }
       },
      "follow": {
          "minecraft:movement": {
            "value": 0.25
          },
           "minecraft:behavior.tempt": {
              "priority": 0,
              "speed_multiplier": 1.2,
              "within_radius": 16,
              "items": [
                "item:red"
              ]
           },
            "minecraft:variant": {
              "value": 3
            }
       },
      "default": {
          "minecraft:movement": {
            "value": 0.25
          },
          "minecraft:variant": {
            "value": 0
          }
       },
      "redteam":{
        "minecraft:transformation": {
          "into": "gvcv5:pmc_red"
        }
      },
      "blueteam":{
        "minecraft:transformation": {
          "into": "gvcv5:pmc_blue"
        }
      },
      "greenteam":{
        "minecraft:transformation": {
          "into": "gvcv5:pmc_green"
        }
      },
      "yellowteam":{
        "minecraft:transformation": {
          "into": "gvcv5:pmc_yellow"
        }
      }
    },

    "components": {
      "minecraft:is_hidden_when_invisible": {
      },
      "minecraft:skin_id": {
        "value": 0
      },
      "minecraft:experience_reward": {
        "on_death": "query.last_hit_by_player ? 10 + (query.equipment_count * Math.Random(1,3)) : 0"
      },
      "minecraft:follow_range": {
        "value": 48,
        "max": 48
      },
      "minecraft:collision_box": {
        "width": 0.5,
        "height": 1.8
      },
      "minecraft:variant": {
        "value": 0
      },
      "minecraft:type_family": {
        "family": [ "pmc","playerp","noteam","allied_soldier", "mob" ]
      },
      "minecraft:breathable": {
        "total_supply": 15,
        "suffocate_time": 0,
        "breathes_water": true
      },

      "minecraft:health": {
        "value": 20,
        "max": 20
      },
      "minecraft:hurt_on_condition": {
        "damage_conditions": [
          {
            "filters": { "test": "in_lava", "subject": "self", "operator": "==", "value": true },
            "cause": "lava",
            "damage_per_tick": 4
          }
        ]
      },
      "minecraft:interact": {
        "interactions": [
          {
            "use_item": false,
            "play_sounds": "enderchest.open",
            "interact_text": "action.gvc.item",
            "on_interact": {
              "filters": {
                "all_of": [
                  {
                    "test": "is_sneaking",
                    "subject": "other",
                    "value": false
                  }
                ]
              },
              "event": "gvcv5:order",
              "target": "self"
            }
          },
          {
            "use_item": false,
            "play_sounds": "enderchest.open",
            "interact_text": "action.gvc.item",
            "on_interact": {
              "filters": {
                "all_of": [
                  { "test": "is_family","subject": "self","value": "noteam"},
                  { "test": "is_family","subject": "other","value": "redteam"},
                  { "test": "has_equipment", "subject": "other", "domain": "hand", "value": "red_dye"}
                ]
              },
              "event": "gvcv5:become_redteam",
              "target": "self"
            }
          },
          {
            "use_item": false,
            "play_sounds": "enderchest.open",
            "interact_text": "action.gvc.item",
            "on_interact": {
              "filters": {
                "all_of": [
                  { "test": "is_family","subject": "self","value": "noteam"},
                  { "test": "is_family","subject": "other","value": "blueteam"},
                  { "test": "has_equipment", "subject": "other", "domain": "hand", "value": "blue_dye"}
                ]
              },
              "event": "gvcv5:become_blueteam",
              "target": "self"
            }
          },
          {
            "use_item": false,
            "play_sounds": "enderchest.open",
            "interact_text": "action.gvc.item",
            "on_interact": {
              "filters": {
                "all_of": [
                  { "test": "is_family","subject": "self","value": "noteam"},
                  { "test": "is_family","subject": "other","value": "greenteam"},
                  { "test": "has_equipment", "subject": "other", "domain": "hand", "value": "green_dye"}
                ]
              },
              "event": "gvcv5:become_greenteam",
              "target": "self"
            }
          },
          {
            "use_item": false,
            "play_sounds": "enderchest.open",
            "interact_text": "action.gvc.item",
            "on_interact": {
              "filters": {
                "all_of": [
                  { "test": "is_family","subject": "self","value": "noteam"},
                  { "test": "is_family","subject": "other","value": "yellowteam"},
                  { "test": "has_equipment", "subject": "other", "domain": "hand", "value": "yellow_dye"}
                ]
              },
              "event": "gvcv5:become_yellowteam",
              "target": "self"
            }
          }
        ]
      },
      "minecraft:movement": {
        "value": 0.25
      },
      "minecraft:navigation.walk": {
        "is_amphibious": false,
        "avoid_sun": false,
        "avoid_water": true
      },
      "minecraft:movement.basic": {
      },
      "minecraft:jump.static": {
      },
      "minecraft:can_climb": {
      },
      "minecraft:nameable": {
      },
      "minecraft:shooter": {
        "def": "minecraft:arrow"
      },
      "minecraft:behavior.ranged_attack": {
        "priority": 0,
        "attack_interval_min": 1.0,
        "attack_interval_max": 3.0,
        "attack_radius": 15.0
      },

      "minecraft:damage_sensor": {
        "triggers": [
          {
            "cause": "all",
            "deals_damage": false,
            "on_damage": {
                  "filters": {
                      "all_of": [
                        {
                          "test": "is_family",
                          "subject": "other",
                          "value": "allied_soldier"
                        }
                      ]
                  }
                }
          }
        ]
      },
      "minecraft:behavior.hurt_by_target": {
        "priority": 1,
        "entity_types": [
          {
            "filters": {
              "test": "is_family",
              "subject": "other",
              "operator": "!=",
              "value": "playerp"
            }
          }
        ]
      },
      "minecraft:behavior.nearest_attackable_target": {
        "priority": 2,
        "must_see": true,
        "reselect_targets": true,
        "entity_types": [
          {
            "filters": {
              "test": "is_family",
              "subject": "other",
              "value": "monster"
            },
            "max_dist": 42
          }
        ]
      },
      "minecraft:behavior.equip_item": {
        "priority": 3
      },
      "minecraft:behavior.look_at_player": {
        "priority": 7,
        "look_distance": 8
      },
      "minecraft:behavior.random_look_around": {
        "priority": 8
      },
      "minecraft:physics": {
      },
      "minecraft:pushable": {
        "is_pushable": true,
        "is_pushable_by_piston": true
      },
      "minecraft:conditional_bandwidth_optimization": {
      }
    },

    "events": {
      "minecraft:entity_spawned": {
        "add": {
          "component_groups": [
            "default"
          ]
        },
        "trigger": "ak102"
      },
      "minecraft:entity_transformed": {
        "add": {
          "component_groups": [
            "default"
          ]
        },
        "trigger": "ak102"
      },
    "gvcv5:become_redteam": {
      "add": {
        "component_groups": [
          "redteam"
        ]
      }
    },
    "gvcv5:become_blueteam": {
      "add": {
        "component_groups": [
          "blueteam"
        ]
      }
    },
    "gvcv5:become_greenteam": {
      "add": {
        "component_groups": [
          "greenteam"
        ]
      }
    },
    "gvcv5:become_yellowteam": {
      "add": {
        "component_groups": [
          "yellowteam"
        ]
      }
    },
      "attack": {
        "remove": {
          "component_groups": [
            "wait",
            "follow",
			      "default"
          ]
        },
        "add": {
          "component_groups": [
            "attack"
          ]
        }
      },
      "wait": {
        "remove": {
          "component_groups": [
            "attack",
            "follow",
			      "default"
          ]
        },
        "add": {
          "component_groups": [
            "wait"
          ]
        }
      },
      "follow": {
        "remove": {
          "component_groups": [
            "attack",
            "wait",
			      "default"
          ]
        },
        "add": {
          "component_groups": [
            "follow"
          ]
        }
      },
      "free": {
        "remove": {
          "component_groups": [
            "attack",
            "wait",
            "follow"
          ]
        },
        "add": {
          "component_groups": [
            "default"
          ]
        }
      },  
      "gvcv5:order": {
        "sequence": [
          {
            "filters": {
              "all_of": [
                { "test": "is_variant", "subject": "self", "operator": "equals", "value": 0 }
              ]
            },
            "trigger": "attack",
            "queue_command": {
              "command": [
                "say attack0"
              ],
              "target": "other"
            }
          },
          {
            "filters": { "test": "is_variant", "subject": "self", "operator": "equals", "value": 3 },
            "trigger": "attack",
            "queue_command": {
              "command": [
                "say attack1"
              ],
              "target": "other"
            }
          },
          {
            "filters": { "test": "is_variant", "subject": "self", "operator": "equals", "value": 1 },
            "trigger": "wait",
            "queue_command": {
              "command": [
                "say wait"
              ],
              "target": "other"
            }
          },
          {
            "filters": { "test": "is_variant", "subject": "self", "operator": "equals", "value": 2 },
            "trigger": "follow",
            "queue_command": {
              "command": [
                "say follow"
              ],
              "target": "other"
            }
          }
        ]
      }
    }
  }
}
