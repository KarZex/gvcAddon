{
	"format_version": "1.16.100",
	"minecraft:attachable": {
		"description": {
			"identifier": "gun:scar",
			"materials": {
				"default": "entity_alphablend"
			},
			"textures": {
				"default": "textures/models/scar.png"
			},
			"geometry": {
				"default": "geometry.scar"//create by NervousMovie801. thanks
			},
			"animations": {
				"first": "animation.scar.first",
				"ads": "animation.scar.ads",
				"third": "animation.scar.third"
			},
			"scripts": {
				"pre_animation": [
					"v.main_hand = c.item_slot == 'main_hand';"
				],
				"animate": [
					{
						"first": "(v.main_hand && c.is_first_person) && !query.is_sneaking"
					},
					{
						"ads": "(v.main_hand && c.is_first_person) && query.is_sneaking"
					},
					{
						"third": "v.main_hand && !c.is_first_person"
					}
				]
			},
			"render_controllers": [
				"controller.render.default"
			]
		}
	}
} 