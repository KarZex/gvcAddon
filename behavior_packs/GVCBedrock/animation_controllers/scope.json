{
    "format_version": "1.10.0",
    "animation_controllers": {
      "controller.animation.ads": {
        "states": {
          "default": {
            "transitions": [
              { "x6": "query.property('zex:sights') == 1 && query.is_sneaking" },
              { "x2": "query.property('zex:sights') == 2 && query.is_sneaking" },
              { "x1": "query.property('zex:sights') != 0 && query.is_sneaking" },
				      { "scopeing": "query.is_sneaking" }
            ]
          },
          "x6": {
            "transitions": [
                {"default":"!query.is_sneaking"}
            ],
            "on_entry": [
              "/camera @s fov_set 30.0 0.25 linear",
              "/event entity @s gvcv5:start_scope",
              "/tag @s add scope"
            ],
            "on_exit": [
              "/camera @s fov_clear 0.25 linear",
              "/event entity @s gvcv5:stop_scope",
              "/tag @s remove scope",
              "/hud @s reset crosshair"
            ]
          },
          "x2": {
            "transitions": [
                {"default":"!query.is_sneaking"}
            ],
            "on_entry": [
              "/camera @s fov_set 45.0 0.1 linear",
              "/tag @s add scope"
            ],
            "on_exit": [
              "/camera @s fov_clear 0.25 linear",
              "/tag @s remove scope",
              "/hud @s reset crosshair"
            ]
          },
          "x1": {
            "transitions": [
                {"default":" !query.is_sneaking"}
            ],
            "on_entry": [
              "/camera @s fov_set 60.0 0.05 linear",
              "/tag @s add scope"
            ],
            "on_exit": [
              "/camera @s fov_clear 0.25 linear",
              "/tag @s remove scope",
              "/hud @s reset crosshair"
            ]
          },
          "scopeing": {
            "transitions": [
                {"default":"!query.is_sneaking"}
            ],
            "on_entry": [
              "/tag @s add scope"
            ],
            "on_exit": [
              "/tag @s remove scope",
              "/hud @s reset crosshair"
            ]
          }
        }
      }
   }
}