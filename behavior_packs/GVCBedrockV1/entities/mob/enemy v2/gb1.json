{
  "format_version": "1.21.0",
  "minecraft:entity": {
    "description": {
      "identifier": "gvcv5:gb1",
      "spawn_category": "monster",
      "is_spawnable": true,
      "is_summonable": true
    },
    "component_groups": {
      "can_despawn": {
        "minecraft:despawn": {
          "despawn_from_distance": {}
        }
      },
      "pkm": {
        "minecraft:behavior.ranged_attack": {
          "priority": 3,
          "burst_shots": 10,
          "burst_interval": 0.1,
          "charge_charged_trigger": 0.0,
          "charge_shoot_trigger": 0.0,
          "attack_interval_min": 3.0,
          "attack_interval_max": 3.0,
          "attack_radius": 20.0
        },
        "minecraft:shooter": {
          "def": "fire:pkm"
        }
      }
    },

    "components": {
      "minecraft:is_hidden_when_invisible": {
      },
      "minecraft:experience_reward": {
        "on_death": "query.last_hit_by_player ? 20 + (query.equipment_count * Math.Random(1,3)) : 0"
      },
      "minecraft:collision_box": {
        "width": 0.5,
        "height": 1.8
      },
      "minecraft:type_family": {
        "family": [ "guerrilla", "monster", "mob" ]
      },
      "minecraft:breathable": {
        "total_supply": 15,
        "suffocate_time": 0,
        "breathes_water": true
      },

      "minecraft:health": {
        "value": 90,
        "max": 90
      },
      "minecraft:hurt_on_condition": {
        "damage_conditions": [
          {
            "filters": { "test": "in_lava", "subject": "self", "operator": "==", "value": true },
            "cause": "lava",
            "damage_per_tick": 4
          }
        ]
      },
      "minecraft:follow_range": {
        "value": 48,
        "max": 48
      },
      "minecraft:loot": {
        "table": "loot_tables/entities/ga.json"
      },
      "minecraft:movement": {
        "value": 0.25
      },
      "minecraft:navigation.walk": {
        "is_amphibious": false,
        "avoid_sun": false,
        "avoid_water": true
      },
      "minecraft:movement.basic": {
      },
      "minecraft:jump.static": {
      },
      "minecraft:can_climb": {
      },
      "minecraft:nameable": {
      },
      "minecraft:equipment": {
        "table": "loot_tables/entities/gb1.json"
      },
      "minecraft:shooter": {
        "def": "minecraft:arrow"
      },
      "minecraft:behavior.ranged_attack": {
        "priority": 0,
        "attack_interval_min": 1.0,
        "attack_interval_max": 3.0,
        "attack_radius": 15.0
      },
      "minecraft:behavior.hurt_by_target": {
        "priority": 1,
        "entity_types": {
            "filters": {
              "test": "is_family",
              "subject": "other",
              "operator": "!=",
              "value": "guerrilla"
            }
          }
      },
      "minecraft:behavior.nearest_attackable_target": {
        "priority": 2,
        "must_see": true,
        "reselect_targets": true,
        "entity_types": [
          {
            "filters": {
              "test": "is_family",
              "subject": "other",
              "value": "player"
            },
            "max_dist": 42
          },
          {
            "filters": {
              "test": "is_family",
              "subject": "other",
              "value": "allied_soldier"
            },
            "max_dist": 42
          },
          {
            "filters": {
              "test": "is_family",
              "subject": "other",
              "value": "villager"
            },
            "max_dist": 42
          },
          {
            "filters": {
              "test": "is_family",
              "subject": "other",
              "value": "wandering_trader"
            },
            "max_dist": 42
          },
          {
            "filters": {
              "test": "is_family",
              "subject": "other",
              "value": "irongolem"
            },
            "max_dist": 42
          }
        ]
      },
      "minecraft:behavior.equip_item": {
        "priority": 3
      },
      "minecraft:physics": {
      },
      "minecraft:pushable": {
        "is_pushable": true,
        "is_pushable_by_piston": true
      },
      "minecraft:conditional_bandwidth_optimization": {
      }
    },

    "events": {
      "minecraft:entity_spawned": {
        "add": {
          "component_groups": [
            "can_despawn", "pkm"
          ]
        }
      },
      "minecraft:spawned_from_block": {
        "add": {
          "component_groups": [
            "pkm"
          ]
        },
        "remove": {
          "component_groups": [
            "can_despawn"
          ]
        }
      }
    }
  }
